<div class="contents-container">
  <div class="video-card">
    <div class="video-title">
      <h1>{{ foundVideo.title }}</h1>
    </div>

    <div class="video-player">
		<iframe class="video-player" src="{{foundVideo.url}}" frameborder="0" allowfullscreen></iframe>
	</div>

    <div class="video-description">
      <p>{{ foundVideo.description }}</p>
    </div>

	<div>
		<button class="input-button"><a id="video-edit" href="/videos/{{ foundVideo._id }}/edit">Edit</a></button>
		<form id="form-video-delete" method="post" action="/videos/{{ foundVideo._id }}/deletions">
			<input class="input-button" id="video-delete" type="submit" value="Delete" />
		</form>
	</div>

	<div class="comment-area">
		<h2>Comments</h2>

		<form method="POST" action="/videos/{{foundVideo._id}}/addcomment">
			<label for="comment-text">Add a comment:</label>
			<textarea id="comment-text" name="commentText"></textarea>
			<input class="input-button" id="comment-add" type="submit" value="Add" />
			{{#if commentError }}
        	<span class="error">Some comment text is required</span>
        	{{/if}}
		</form>

		<div id="comments-container">
			{{#each comments as |comment|}}
				<div class="comment-card">
					{{ comment.text }}
					{{!-- Too lazy to set up the format date stuff here, full on gmt here we come! --}}
					<div class="comment-posted">{{ comment.timestamp }}</div>
				</div>
			{{/each}}
		</div>
	</div>
  </div>
</div>